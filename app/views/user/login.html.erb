<% form_tag :action => "login" do %>
	<fieldset>
    <div class="row">
      <%= label_tag 'user_login', 'Username' %>
			<%= text_field "user", "login", :size => 20 %>
		</div>
    <div class="row">
			<%= label_tag 'password', 'Password' %>
			<%= password_field "user", "password", :size => 20 %>
		</div>
	</fieldset>
	<%= submit_tag "Login" %>
<% end %>