<table class="itu">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Colors</th>
    </tr>
  </thead>
  
  <tbody>
    <% for technician in @technicians %>
    <tr>
      <td><a href="/admin/technicians/<%= technician.id %>/edit"><%= h technician.name %></a></td>
      <td><a href="/admin/technicians/<%= technician.id %>/edit"><%= h technician.code %></a></td>
      <td><a href="/admin/technicians/<%= technician.id %>/edit" style="background-color:<%= technician.color %>;color:<%= technician.font_color %>;"><%= h technician.font_color %> on <%= h technician.color %>.</a></td>
    </tr>
    <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function() {
    // make sidebar item appear selected
    $("#sidebar li a.technicians").parent().addClass("selected");
    // add new goggle type button to footer
    $("#footer div.col2").append("<a href='/admin/technicians/new'>New Technician</a>");
  });
</script>
